                  {% if countEvents > 12 %}
                      <a href="{{ path('ath_main_event_sportifs') }}"><button class="btn-new-info">{{ "voir_tous_events" | trans({}, 'home') }}</button></a>
                  {% endif %}
              </div>
          </div>
    </div>
  </div>
  {% include '@ath_main_path/Includes/read_more_modal.html.twig' %}
