              {% for oneEvent in events %}
                <div class="row event_preview small">
                    <div class="col-md-4">
                      <a href="{{ oneEvent.siteWeb }}" target="_blank">

                        <img class="" src="{{ oneEvent.webPath | imagine_filter('mini') }}" alt="{{ oneEvent }}" title="{{ oneEvent }}" />
