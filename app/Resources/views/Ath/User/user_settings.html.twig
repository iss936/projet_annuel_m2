{% extends "::base.html.twig" %}

{% block body %}

<h1 class="title-line">{{ "title.settings" | trans({}, 'home') }}</h1>

<div class="row">
  <div class="col-md-12">
    <form class="" action="{{ path('ath_main_user_settings') }}" method="POST">
      {{ form_row(form._token) }}

      {{ form_row(form.mailWhenFollower) }}
      <br><br>
      {{ form_row(form.newsletter) }}
